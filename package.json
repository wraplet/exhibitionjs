{
  "name": "exhibitionjs",
  "version": "0.12.0",
  "description": "Library for showcasing your js/ts code snippets.",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wraplet/exhibitionjs.git"
  },
  "scripts": {
    "setup": "pnpm install",
    "build": "tsx ./node_modules/.bin/webpack --mode production --config webpack.config.ts",
    "serve": "npx http-server . -p 8080",
    "dev:build": "tsx ./node_modules/.bin/webpack --mode development --config webpack.config.ts",
    "dev:watch": "tsx ./node_modules/.bin/webpack --mode development --watch --config webpack.config.ts",
    "lint": "tsc --noemit && npx eslint './src/**/*.ts' './tests/**/*.ts'",
    "lint:fix": "npx eslint './src/**/*.ts' './tests/**/*.ts' --fix",
    "tests-setup": "npx playwright install chromium",
    "tests": "npx playwright test"
  },
  "files": [
    "dist"
  ],
  "author": "≈Åukasz Zaroda",
  "license": "MIT",
  "dependencies": {
    "wraplet": "^0.38.0"
  },
  "peerDependencies": {
    "monaco-editor": "^0.54.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/aria-query": "^5.0.4",
    "@types/jest": "^30.0.0",
    "@types/sortablejs": "^1.15.8",
    "css-loader": "^7.1.2",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "file-loader": "^6.2.0",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "jest": "^30.1.2",
    "jest-cli": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2",
    "monaco-editor": "^0.54.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "wait-on": "^9.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
